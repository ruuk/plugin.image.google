<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.image.google"
       name="google"
       version="0.9.0"
       provider-name="Rick Phillips (ruuk)">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.simplejson" version="2.0.9"/>
   </requires>

  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Plugin to search and browse google images</summary>
    <description>Search, view, and save Google Images. Includes advanced search and search history. Note: only 32 images per search - a Google limit.</description>
	<platform>all</platform>
  </extension>
</addon>